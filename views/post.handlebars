<div id="{{{post.id}}}" class="text-center">
  <h2>{{name}}</h2>
  <p>{{description}}</p>
  <p>{{timeframe}}</p>
  <a href="/posts/{{id}}/edit" data-id="{{id}}" value="edit">edit</a>
  <p>Created by {{user.name}} â€” {{format_date date_created}}</p>
  <div class="col-md-4">
    <button class="btn btn-danger" data-id="{{post.id}}" value="delete">delete</button>
  </div>
  <p>Leave a comment below.</p>
</div>
<div class="main-commentdiv">
  <div class="new-commentdiv">
    <h3>Create a New Comment:</h3>
    <form class="new-comment-form">
      <div class="form-group">
        <label for="comment-desc">description:</label>
        <textarea class="form-input" id="comment-desc" name="comment-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>
  {{#if comments.length}}
  <div class="current-commentdiv comment-list">
    <h3>Current Comments:</h3>
    {{#each comments as |comment|}}
    {{> comment}}
    {{/each}}
  </div>
  {{/if}}
  </p>
</div>
</div>
<script src="/js/comment.js"></script>