  <div class="main-commentdiv">
    <div class="new-commentdiv">
      <h3>Create a New Comment:</h3>
      <form class="new-comment-form">
        <div class="form-group">
          <label for="comment-desc">description:</label>
          <textarea class="form-input" id="comment-desc" name="comment-desc"></textarea>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Create</button>
        </div>
      </form>
    </div>
    {{#if comments.length}}
    <div class="current-commentdiv comment-list">
      <h3>Current Comments:</h3>
      {{#each comments as |comment|}}
      <p class="posts-div">Created by {{user.name}} on {{format_date date_created}}</p>
      {{> comment}}
      {{/each}}
    </div>
    {{/if}}
